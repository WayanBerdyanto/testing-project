pipeline {
    agent any

    triggers {
        githubPush()
    }

    stages {
        stage('Pull Latest Code') {
            steps {
                echo '[1] Pulling latest code...'
                git branch: 'main', url: 'https://github.com/WayanBerdyanto/testing-project.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('mongo-db/js') {
                    echo '[2] Installing dependencies...'
                    bat 'npm install'
                }
            }
        }

        stage('Run Script') {
            steps {
                dir('mongo-db/js') {
                    echo '[3] Running script...'
                    bat 'node src/metrics.js'
                }
            }
        }
    }
}
